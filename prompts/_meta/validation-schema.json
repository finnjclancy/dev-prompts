{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "llm prompt template",
  "type": "object",
  "required": ["title", "description", "category", "instructions"],
  "properties": {
    "title": { "type": "string" },
    "description": { "type": "string" },
    "language": { "type": ["string", "null"] },
    "tech": { "type": ["string", "null"] },
    "category": { "type": "string" },
    "subcategory": { "type": ["string", "null"] },
    "tags": { "type": "array", "items": { "type": "string" } },
    "inputs": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name"],
        "properties": {
          "name": { "type": "string" },
          "type": { "type": "string", "enum": ["string", "number", "boolean", "code", "path", "url", "enum", "json", "markdown"] },
          "required": { "type": "boolean", "default": true },
          "default": {},
          "enum": { "type": "array", "items": {} },
          "description": { "type": "string" }
        },
        "additionalProperties": false
      }
    },
    "context": { "type": "string" },
    "instructions": { "type": "string" },
    "examples": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "input": {},
          "output": {},
          "notes": { "type": "string" }
        },
        "additionalProperties": false
      }
    },
    "model_tips": { "type": "string" },
    "risks": { "type": "string" },
    "references": { "type": "array", "items": { "type": "string" } },
    "output_format": {
      "type": "object",
      "properties": {
        "type": { "type": "string", "enum": ["markdown", "json", "code", "text"] },
        "schema": {}
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
